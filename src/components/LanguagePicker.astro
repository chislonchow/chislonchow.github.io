---
import { languages } from '../i18n/ui';

import { getLangFromUrl, getEquivalentUrl } from '../i18n/utils';
const currentLang = getLangFromUrl(Astro.url);
---
{Object.entries(languages).map(([lang, label]) => (
  lang !== currentLang && (
  <button class="flex items-center bg-gray-500 hover:bg-gray-600 rounded transition duration-300">
    <a class="text-white hover:text-white py-1 px-2 text-xs no-underline"
    href={`${getEquivalentUrl(Astro.url, lang)}`}>{label}</a>
  </button>
  )
  ))}
