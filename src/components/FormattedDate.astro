---
interface Props {
    date: Date | null;
}

const { date } = Astro.props;
---

{date ? (
    <time datetime={date.toISOString()}
    class="text-gray-500 dark:text-gray-400 text-xs font-medium tracking-wide"
    >
    {
        date.toLocaleDateString('en-ca', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
        })
    }
</time>
) : ''}
